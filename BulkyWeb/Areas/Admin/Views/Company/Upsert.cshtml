@model Company

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-12">   
            <div class="p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary text-center">@(Model.Id != 0 ? "Update" : "Create") Company </h2>
                    <hr />
                </div>
                <div asp asp-validation-summary="All"></div>
                <input asp-for="Id" hidden />
                <div>
                    <label asp-for="Name" class="p-0"></label>
                    <input asp-for="Name" class="form-control mb-1 border-2 shadow" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="StreetAddress" class="p-0 mt-4"></label>
                    <input asp-for="StreetAddress" class="form-control mb-3 border-2 shadow" />
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="City" class="p-0 mt-4"></label>
                    <input asp-for="City" class="form-control mb-1 border-2 shadow" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="State" class="p-0 mt-4"></label>
                    <input asp-for="State" class="form-control mb-1 border-2 shadow" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="PostalCode" class="p-0 mt-4"></label>
                    <input asp-for="PostalCode" class="form-control mb-1 border-2 shadow" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="PhoneNumber" class="p-0 mt-4"></label>
                    <input asp-for="PhoneNumber" class="form-control mb-1 border-2 shadow" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
               
                
                @if (Model.Id != 0)
                {
                    <button type="submit" class="btn btn-primary btn-outline" style="width:150px">Update</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary btn-outline" style="width:150px">Create</button>
                }

                <a asp-controller="Company" asp-action="Index" class="btn btn-outline border form-control" style="width:200px">Back To List</a>


            </div>
        </div>

    </div>

</form>


@section Scripts
{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount linkchecker',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


