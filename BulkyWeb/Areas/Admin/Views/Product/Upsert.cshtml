@model ProductVM

<form method="post" enctype="multipart/form-data">
    <input asp-for="Product.ProductId" hidden />
    <input asp-for="Product.ImageUrl" hidden />
    <div class="row">
        <div class="col-10">   
            <div class="p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary text-center">@(Model.Product.ProductId != 0 ? "Update" : "Create") Product </h2>
                    <hr />
                </div>
                <div asp asp-validation-summary="All"></div>
                <div>
                    <label asp-for="Product.Title" class="p-0"></label>
                    <input asp-for="Product.Title" class="form-control mb-1 border-2 shadow" />
                    <span asp-validation-for="Product.Title" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Product.Author" class="p-0 mt-4"></label>
                    <input asp-for="Product.Author" class="form-control mb-3 border-2 shadow" />
                    <span asp-validation-for="Product.Author" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Product.Description" class="p-0 mt-4 text-muted"></label>
                    <textarea asp-for="Product.Description" class="p-0 mt-4"></textarea>
                </div>
                <div>
                    <label asp-for="Product.ISBN" class="p-0 mt-4"></label>
                    <input asp-for="Product.ISBN" class="form-control mb-1 border-2 shadow" />
                    <span asp-validation-for="Product.ISBN" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Product.ListPrice" class="p-0 mt-4"></label>
                    <input asp-for="Product.ListPrice" class="form-control mb-1 border-2 shadow" />
                    <span asp-validation-for="Product.ListPrice" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Product.Price" class="p-0 mt-4"></label>
                    <input asp-for="Product.Price" class="form-control mb-1 border-2 shadow" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Product.Price50" class="p-0 mt-4"></label>
                    <input asp-for="Product.Price50" class="form-control mb-1 border-2 shadow" />
                    <span asp-validation-for="Product.Price50" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Product.Price100" class="p-0 mt-4"></label>
                    <input asp-for="Product.Price100" class="form-control mb-1 border-2 shadow" />
                    <span asp-validation-for="Product.Price100" class="text-danger"></span>
                </div>
                <div>
                    <input type="file" name="file" class="p-0 mt-4" />
                    <label asp-for="Product.ImageUrl" class="form-control mb-1 border-2 shadow" />
                </div>
                <div>
                    <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="p-0 mt-4 form-select border-2 shadow">
                        <option disabled selected>--Select CategoryId --</option>
                    </select>
                    <label asp-for="Product.CategoryId" class="p-0 mt-4 shadow" />
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
                @if (Model.Product.ProductId != 0)
                {
                    <button type="submit" class="btn btn-primary btn-outline" style="width:150px">Update</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary btn-outline" style="width:150px">Create</button>
                }

                <a asp-controller="Product" asp-action="Index" class="btn btn-outline border form-control" style="width:200px">Back To List</a>


            </div>
        </div>
        <div class="col-2">
            <img src = "@Model.Product.ImageUrl" width="100%"
                 style="border-radius:5px; border: 1px solid #bbb9b9" />
        </div>
    </div>

</form>


@section Scripts
{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount linkchecker',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


