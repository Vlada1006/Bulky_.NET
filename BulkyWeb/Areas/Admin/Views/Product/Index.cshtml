
@model List<Product>

    <div class="container">
    <div class="row mt-2 mb-3">
        <div class="col-6 text-primary">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-outline-dark"> 
                <i class="bi bi-patch-plus"></i> Create New Product
            </a>
        </div>
    </div>
   </div>


<table class="table table-bordered table-striped">
<thead>
    <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Category</th>

    </tr>
</thead>

<tbody>
    @foreach(var obj in Model)
    {
            <tr>

                <td>@obj.Title</td>
                <td>@obj.Author</td>
                <td>@obj.ISBN</td>
                <td>@obj.ListPrice</td>
                <td>@obj.Category.Name</td>
                <td>
                    <div class="btn-group role=group w-75">
                        <a asp-controller="Product" asp-action="Upsert" asp-route-productId="@obj.ProductId" class="btn btn-outline-dark mx-2">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-productId="@obj.ProductId" class="btn btn-outline-danger mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                       

                    
                </td>

            </tr>
    }
</tbody>

</table>
