﻿
@model Category
<input asp-for="Id" hidden />
<form method="post">
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-center"> Edit Category </h2>
            <hr />
        </div>
        <div asp asp-validation-summary="All"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control border-2 shadow" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1 ">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" class="form-control border-2 shadow" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-outline-dark" style="width:150px"> Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark border form-control" style="width:200px"> Back to list</a>

    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}