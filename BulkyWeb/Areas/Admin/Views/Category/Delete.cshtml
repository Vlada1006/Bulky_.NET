@model Category
<input asp-for="Id" hidden />
<form method="post">
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary text-center"> Delete Category </h2>
            <hr />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control border-2 shadow" />
        </div>
        <div class="mb-3 row p-1 ">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" disabled class="form-control border-2 shadow" />
        </div>

        <button type="submit" class="btn btn-outline-danger"  style="width:150px"> Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark border form-control" style="width:200px"> Back to list</a>

    </div>
</form>